M450_DIR=/usr/lib/m450
GONDUL_DIR=/usr/lib/gondul
MALIHYBRIS_DIR=/usr/lib/malihybris


if [ -e /proc/device-tree/mali@d00c0000/compatible ]; then
    ln -sf "$M450_DIR/libMali.so" /var/lib/libMali.so
    ln -sf "$M450_DIR/libMali.so" /var/lib/libEGL.so
    ln -sf "$M450_DIR/libMali.so" /var/lib/libGLESv1_CM.so
    ln -sf "$M450_DIR/libMali.so" /var/lib/libGLESv2.so
    ln -sf "$M450_DIR/libMali.so" /var/lib/libGLESv3.so
elif [ -e /proc/device-tree/t82x@d00c0000/compatible ]; then
    ln -sf "$MALIHYBRIS_DIR/libEGL.so.1.0.0" /var/lib/libEGL.so
    ln -sf "$MALIHYBRIS_DIR/libGLESv1_CM.so.1.0.1" /var/lib/libGLESv1_CM.so
    ln -sf "$MALIHYBRIS_DIR/libGLESv2.so.2.0.0" /var/lib/libGLESv2.so
    ln -sf "$MALIHYBRIS_DIR/libGLESv3.so.3.0.0" /var/lib/libGLESv3.so
elif [ -e /proc/device-tree/bifrost/compatible ]; then
    ln -sf "$GONDUL_DIR/libMali.so" /var/lib/libMali.so
    ln -sf "$GONDUL_DIR/libMali.so" /var/lib/libEGL.so
    ln -sf "$GONDUL_DIR/libMali.so" /var/lib/libGLESv1_CM.so
    ln -sf "$GONDUL_DIR/libMali.so" /var/lib/libGLESv2.so
    ln -sf "$GONDUL_DIR/libMali.so" /var/lib/libGLESv3.so
fi
